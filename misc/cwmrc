# Set default Xft(3) font
fontname "spleen:pixelsize=14:bold"
borderwidth 0
# Turn on sticky-group mode
sticky yes

# Any entry here is shown in the application menu
command firefox         firefox
command xmms            xmms
command smenu           "st -G 322x114+26+35 -e smenu"

# Ignore programs by that name by not drawing borders around them.
ignore XMMS
ignore xwi
ignore xapm
ignore xclock

# Key bindings
unbind-key all
bind-key 4-Return      "st"
bind-key 4-d            "st -G 322x114+26+35 -e smenu"
bind-key 4-1            group-only-1
bind-key 4-2            group-only-2
bind-key 4-3            group-only-3
bind-key 4S-1           window-movetogroup-1
bind-key 4S-2           window-movetogroup-2
bind-key 4S-3           window-movetogroup-3
bind-key 4-a            group-toggle-all
bind-key 4-q            window-close
bind-key 4-f            window-fullscreen
bind-key 4-c            "wctrl -c"
bind-key 4-p            "scr"
bind-key 4S-p           "scr -s"
bind-key M-Tab          window-cycle
bind-key MS-Tab         window-rcycle
bind-key 4-l            lock
bind-key 4S-q           quit
bind-key 4S-r           restart
bind-key 4S-question    menu-exec

# Mouse bindings
unbind-mouse all
bind-mouse 4-2         window-lower
bind-mouse 4-3         window-resize
bind-mouse 4-1         window-move
